text = input("Enter a string: ")




vowels = 0
consonants = 0
spaces = 0
others = 0


vowel_list_lower = ['a', 'e', 'i', 'o', 'u']
vowel_list_upper = ['A', 'E', 'I', 'O', 'U']


for char in text:
   
    if (char >= 'a' and char <= 'z') or (char >= 'A' and char <= 'Z'):
        if char in vowel_list_lower or char in vowel_list_upper:
            vowels += 1
        else:
            consonants += 1
   
    elif char == ' ':
        spaces += 1
   
    else:
        others += 1




print("Vowels:", vowels)
print("Consonants:", consonants)
print("Spaces:", spaces)
print("Other characters:", others)


















# Get input from user
digit_string = input("Enter a string of digits: ")


# Initialize sum variable
sum_of_digits = 0


# Loop through each character in the string
for digit in digit_string:
    if digit.isdigit():  # Ensure the character is a digit
        sum_of_digits += int(digit)


# Print the result
print("Sum of digits:", sum_of_digits)
